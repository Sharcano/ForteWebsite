<div class="contact-form-container">
    <form method="post" action="/Home/BizeYazin">
        <!-- Ad ve Soyad -->
        @if (ViewData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @ViewData["SuccessMessage"]
            </div>
        }
        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @ViewData["ErrorMessage"]
            </div>
        }
        <div class="form-group">
            <label for="name">Adınız*</label>
            <input type="text" id="name" name="Name" placeholder="Adınız" required>
        </div>
        <div class="form-group">
            <label for="surname">Soyadınız*</label>
            <input type="text" id="surname" name="Surname" placeholder="Soyadınız" required>
        </div>

        <!-- Şirket ve Ünvan -->
        <div class="form-group">
            <label for="company">Şirketiniz</label>
            <input type="text" id="company" name="Company" placeholder="Şirketiniz">
        </div>
        <div class="form-group">
            <label for="title">Ünvanınız*</label>
            <input type="text" id="title" name="Title" placeholder="Ünvanınız" required>
        </div>

        <!-- Ülke ve E-posta -->
        <div class="form-group">
            <label for="country">Ülke*</label>
            <select id="country" name="Country" required>
                <option value="">Ülke Seçin</option>
                <option value="TR">Türkiye</option>
                <option value="US">Amerika</option>
                <option value="DE">Almanya</option>
                <!-- Daha fazla ülke ekleyebilirsiniz -->
            </select>
        </div>
        <div class="form-group">
            <label for="email">E-posta adresiniz*</label>
            <input type="email" id="email" name="Email" placeholder="E-posta adresiniz" required>
        </div>

        <!-- Telefon -->
        <div class="form-group single-line">
            <label for="phone">Telefon</label>
            <input type="tel" id="phone" name="Phone" placeholder="Telefon numaranız">
        </div>

        <!-- Mesaj -->
        <div class="form-group single-line">
            <label for="message">Mesajınız*</label>
            <textarea id="message" name="Message" rows="1" placeholder="Mesajınızı yazın" required></textarea>
        </div>

        <!-- Onay Kutuları -->
        <!-- Onay Kutuları -->
        <div class="form-group full-width-lower">
            <div class="check-group">
                <div>
                    <input type="checkbox" id="privacy" name="PrivacyAccepted" value="true" required>
                    <label for="privacy">
                        Kişisel verilerin işlenmesi ile ilgili
                        <a href="/aydinlatma-metni" class="link">aydınlatma metnini</a> okudum.*
                    </label>
                </div>
            </div>
            <div class="check-group">
                <div>
                    <input type="checkbox" id="consent" name="ConsentAccepted" value="true" required>
                    <label for="consent">Kişisel verilerimin işlenmesini kabul ediyorum.*</label>
                </div>
            </div>
            <!-- Gönder butonu da aynı blokta, en altta -->
            <button type="submit" class="submit-button">Gönder</button>
        </div>
    </form>
</div>





