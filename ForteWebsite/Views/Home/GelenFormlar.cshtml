<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Ünvan</th>
            <th>E-posta</th>
            <th>Telefon</th>
            <th>Mesaj</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var form in Model)
        {
            <tr>
                <td>@form.Name</td>
                <td>@form.Surname</td>
                <td>@form.Title</td>
                <td>@form.Email</td>
                <td>@form.Phone</td>
                <td>@form.Message</td>
            </tr>
        }
    </tbody>
</table>

