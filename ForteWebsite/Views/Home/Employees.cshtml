@{
    var employeesElements = ViewBag.EmployeesElements as Dictionary<string, SiteElement>;
}
@{
    var imageElements = employeesElements?
        .Where(e => e.Value.ElementType == "image")
        .ToDictionary(e => e.Key, e => e.Value);
}

@{
    ViewData["Title"] = "Çalışanlar";
}

