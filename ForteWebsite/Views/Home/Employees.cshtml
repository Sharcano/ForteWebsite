            <h1 data-editable="true" data-element-id="159" data-page-name="Employees">
                @(employeesElements?["employeesHeading"]?.DefaultValue ?? "Çalışanlar")
            </h1>
        }
        else
        {
            <h1>
                @(employeesElements?["employeesHeading"]?.DefaultValue ?? "Çalışanlar")
            </h1>
        }
        @if (User?.Identity?.IsAuthenticated == true)
        {
            <p data-editable="true" data-element-id="160" data-page-name="Employees">
                @(employeesElements?["employeesText1"]?.DefaultValue
                    ?? "Forte bünyesinde gerek bilgi ve iletişim...")
            </p>
        }
        else
        {
            <p>
                @(employeesElements?["employeesText1"]?.DefaultValue
                    ?? "Forte bünyesinde gerek bilgi ve iletişim...")
            </p>
        }
        @if (User?.Identity?.IsAuthenticated == true)
        {
            <p data-editable="true" data-element-id="161" data-page-name="Employees">
                @(employeesElements?["employeesText2"]?.DefaultValue
                    ?? "Mutlu bir iş ortamı, özgürce üretebilmek...")
            </p>
        }
        else
        {
            <p>
                @(employeesElements?["employeesText2"]?.DefaultValue
                    ?? "Mutlu bir iş ortamı, özgürce üretebilmek...")
            </p>
        }
    </div>
</div>

<section class="professional-section">
    <div class="professional-container">
        <div class="image-container">
            @if (User?.Identity?.IsAuthenticated == true)
            {
                <img data-editable="true" data-element-id="162" data-page-name="Employees"
                     src="@(imageElements?["professionalImage"]?.DefaultValue ?? "/images/your-image.jpg")"
                     alt="Deneyimli Profesyoneller" />
            }
            else
            {
                <img src="@(imageElements?["professionalImage"]?.DefaultValue ?? "/images/your-image.jpg")"
                     alt="Deneyimli Profesyoneller" />
            }
        </div>
        <div class="text-container">
            @if (User?.Identity?.IsAuthenticated == true)
            {
                <h2 data-editable="true" data-element-id="163" data-page-name="Employees">
                    @(employeesElements?["professionalHeading"]?.DefaultValue ?? "Deneyimli Profesyoneller")
                </h2>
            }
            else
            {
                <h2>
                    @(employeesElements?["professionalHeading"]?.DefaultValue ?? "Deneyimli Profesyoneller")
                </h2>
            }
            @if (User?.Identity?.IsAuthenticated == true)
            {
                <p data-editable="true" data-element-id="164" data-page-name="Employees">
                    @(employeesElements?["professionalText"]?.DefaultValue
                        ?? "Deneyimli profesyoneller, kendileri gibi uzman kişilerden...")
                </p>
            }
            else
            {
                <p>
                    @(employeesElements?["professionalText"]?.DefaultValue
                        ?? "Deneyimli profesyoneller, kendileri gibi uzman kişilerden...")
                </p>
            }
        </div>
    </div>
</section>

<section class="employee-section">
    <div class="employee-container">
        <!-- Çalışanları listelemek için buton -->
        @if (User?.Identity?.IsAuthenticated == true)
        {
            <button id="employee-btn" class="employee-btn"
                    data-editable="true" data-element-id="166" data-page-name="Employees">
                @(employeesElements?["employeeButtonText"]?.DefaultValue
                    ?? "Çalışanlar listesini görüntüleyin")
            </button>
        }
        else
        {
            <button id="employee-btn" class="employee-btn">
                @(employeesElements?["employeeButtonText"]?.DefaultValue
                    ?? "Çalışanlar listesini görüntüleyin")
            </button>
        }

        <!-- Çalışanların listeleneceği tablo -->
        <table id="employee-table" class="employee-table" style="display: none; margin-top: 20px;">
            <thead>
                <tr>
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <th data-editable="true" data-element-id="166" data-page-name="Employees">
                            @(employeesElements?["employeeTableHeaderName"]?.DefaultValue ?? "İsim")
                        </th>
                    }
                    else
                    {
                        <th>
                            @(employeesElements?["employeeTableHeaderName"]?.DefaultValue ?? "İsim")
                        </th>
                    }
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <th data-editable="true" data-element-id="167" data-page-name="Employees">
                            @(employeesElements?["employeeTableHeaderRole"]?.DefaultValue ?? "Görev")
                        </th>
                    }
                    else
                    {
                        <th>
                            @(employeesElements?["employeeTableHeaderRole"]?.DefaultValue ?? "Görev")
                        </th>
                    }
                    <th>Foto</th>
                </tr>
            </thead>
            <tbody>
                <!-- Veriler buraya JavaScript ile eklenecek -->
            </tbody>
        </table>
    </div>
    <!-- JavaScript dosyasını bağlama -->
    <script src="site.js"></script>
</section>




